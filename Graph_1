#pragma once


#include <fstream>
#include <iostream>

using namespace std;

int n, m;

ifstream in("in.txt");

void Matrix_ReadSizes()
{
	in >> n >> m;
}

void Matrix_GetInput(int **a)
{

	a = new int *[n];

	for (int i = 0; i < n; i++)
	{
		a[i] = new int[m];
	}

	cout << n;

	

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			in >> a[i][j];
		}
	}
}

void GetLineListInput(int **a)
{
	int g;

	ifstream in("in5.1.txt");

	in >> g;

	a = new int *[g];


	for (int i = 0; i < g; i++)
	{
		a[i] = new int[g];
	}


	for (int i = 0; i < g; i++)
	{
		for (int j = 0; j < g; j++)
		{
			a[i][j] = 0;
		}
	}


	while (!(in.eof()))
	{
		int x, y;

		in >> x;
		in >> y;

		a[x - 1][y - 1] = 1;
		a[y - 1][x - 1] = 1;

	}

	for (int i = 0; i < g; i++)
	{
		for (int j = 0; j < g; j++)
		{
			cout << a[i][j] << " ";
		}

		cout << endl;
	}

	cout << endl;
}

void PrintMatrix(int **&a)
{

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			cout << a[i][j] << " ";
		}

		cout << endl;
	}
}

